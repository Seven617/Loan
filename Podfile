platform :ios, '10.0'

  # 表示可以使用 swift 的框架
use_frameworks!

  # 这个是 cocoapods 升级 1.0 后必须的
 #  MyApp 就是 TARGET NAME
target 'Loan' do
use_frameworks!
      # 指定库 和 库的版本
pod 'SDWebImage'
pod 'Kingfisher'
pod 'MJRefresh'
pod 'Masonry' 
pod 'LTAutoScrollView'
pod 'SnapKit', '~> 4.0.0'
pod 'EasyNavigation','~>1.0'
pod 'Alamofire', '~> 4.7'
end

